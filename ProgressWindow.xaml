<Window x:Class="LineCounter.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="行数を数えています..." Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="message" Grid.ColumnSpan="2" Margin="3" VerticalAlignment="Center"></TextBlock>
        <ProgressBar x:Name="progressBar" Grid.Row="1" Margin="3,6" IsIndeterminate="True"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="3" Click="Button_Click">キャンセル</Button>
    </Grid>
</Window>
